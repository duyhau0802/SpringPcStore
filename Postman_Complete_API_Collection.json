{
  "info": {
    "_postman_id": "spring-pc-store-complete-api",
    "name": "Spring PC Store - Complete API Collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "üîê Authentication",
      "item": [
        {
          "name": "Login User",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {"mode": "raw", "raw": "{\n  \"username\": \"admin1\",\n  \"password\": \"123456\"\n}"},
            "url": {"raw": "{{base_url}}/api/auth/login", "host": ["{{base_url}}"], "path": ["api", "auth", "login"]}
          },
          "event": [{"listen": "test", "script": {"exec": ["if (pm.response.code === 200) { const response = pm.response.json(); if (response.token) { pm.collectionVariables.set('auth_token', response.token); pm.collectionVariables.set('user_id', response.userId); pm.collectionVariables.set('user_role', response.roles[0]); pm.test.set(\"Token received successfully\", true); } } else { pm.test.set(\"Login failed\", false); }"]}}]
        },
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {"mode": "raw", "raw": "{\n  \"username\": \"testuser\",\n  \"email\": \"test@example.com\",\n  \"password\": \"123456\",\n  \"fullName\": \"Test User\",\n  \"phoneNumber\": \"1234567890\"\n}"},
            "url": {"raw": "{{base_url}}/api/auth/register", "host": ["{{base_url}}"], "path": ["api", "auth", "register"]}
          }
        },
        {
          "name": "Check Authentication",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{auth_token}}"}],
            "url": {"raw": "{{base_url}}/api/auth/check", "host": ["{{base_url}}"], "path": ["api", "auth", "check"]}
          }
        }
      ]
    },
    {
      "name": "üì¶ Products",
      "item": [
        {
          "name": "Get All Products (Public)",
          "request": {"method": "GET", "url": {"raw": "{{base_url}}/api/products?page=0&size=10", "host": ["{{base_url}}"], "path": ["api", "products"], "query": [{"key": "page", "value": "0"}, {"key": "size", "value": "10"}]}}
        },
        {
          "name": "Create Product (Admin/Store Owner)",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}, {"key": "Authorization", "value": "Bearer {{auth_token}}"}],
            "body": {"mode": "raw", "raw": "{\n  \"storeId\": 1,\n  \"categoryId\": 1,\n  \"brandId\": 1,\n  \"name\": \"Dell XPS 15\",\n  \"price\": 2500.00,\n  \"status\": \"ACTIVE\",\n  \"description\": \"High-performance laptop\"\n}"},
            "url": {"raw": "{{base_url}}/api/products", "host": ["{{base_url}}"], "path": ["api", "products"]}
          }
        },
        {
          "name": "Search Products (Public)",
          "request": {"method": "GET", "url": {"raw": "{{base_url}}/api/products/search?name=laptop", "host": ["{{base_url}}"], "path": ["api", "products", "search"], "query": [{"key": "name", "value": "laptop"}]}}
        }
      ]
    },
    {
      "name": "üõí Cart",
      "item": [
        {
          "name": "Get My Cart",
          "request": {"method": "GET", "header": [{"key": "Authorization", "value": "Bearer {{auth_token}}"}], "url": {"raw": "{{base_url}}/api/cart", "host": ["{{base_url}}"], "path": ["api", "cart"]}}
        },
        {
          "name": "Add Item to Cart",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}, {"key": "Authorization", "value": "Bearer {{auth_token}}"}],
            "body": {"mode": "raw", "raw": "{\n  \"productId\": 1,\n  \"storeId\": 1,\n  \"quantity\": 1,\n  \"price\": 2500.00\n}"},
            "url": {"raw": "{{base_url}}/api/cart/items", "host": ["{{base_url}}"], "path": ["api", "cart", "items"]}
          }
        },
        {
          "name": "Clear Entire Cart",
          "request": {"method": "DELETE", "header": [{"key": "Authorization", "value": "Bearer {{auth_token}}"}], "url": {"raw": "{{base_url}}/api/cart", "host": ["{{base_url}}"], "path": ["api", "cart"]}}
        }
      ]
    },
    {
      "name": "üìã Orders",
      "item": [
        {
          "name": "Get My Orders",
          "request": {"method": "GET", "header": [{"key": "Authorization", "value": "Bearer {{auth_token}}"}], "url": {"raw": "{{base_url}}/api/orders/my", "host": ["{{base_url}}"], "path": ["api", "orders", "my"]}}
        },
        {
          "name": "Create Order",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}, {"key": "Authorization", "value": "Bearer {{auth_token}}"}],
            "body": {"mode": "raw", "raw": "{\n  \"totalPrice\": 2500.00,\n  \"shippingAddress\": \"123 Tech Street\",\n  \"orderItems\": [{\n    \"productId\": 1,\n    \"storeId\": 1,\n    \"price\": 2500.00,\n    \"quantity\": 1\n  }]\n}"},
            "url": {"raw": "{{base_url}}/api/orders", "host": ["{{base_url}}"], "path": ["api", "orders"]}
          }
        }
      ]
    },
    {
      "name": "üí≥ Payments",
      "item": [
        {
          "name": "Create Payment",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}, {"key": "Authorization", "value": "Bearer {{auth_token}}"}],
            "body": {"mode": "raw", "raw": "{\n  \"orderId\": 1,\n  \"method\": \"CREDIT_CARD\",\n  \"amount\": 2500.00,\n  \"paymentDetails\": \"Visa ending in 4242\"\n}"},
            "url": {"raw": "{{base_url}}/api/payments", "host": ["{{base_url}}"], "path": ["api", "payments"]}
          }
        }
      ]
    },
    {
      "name": "‚≠ê Reviews",
      "item": [
        {
          "name": "Get Product Reviews (Public)",
          "request": {"method": "GET", "url": {"raw": "{{base_url}}/api/reviews/product/1", "host": ["{{base_url}}"], "path": ["api", "reviews", "product", "1"]}}
        },
        {
          "name": "Create Review",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}, {"key": "Authorization", "value": "Bearer {{auth_token}}"}],
            "body": {"mode": "raw", "raw": "{\n  \"productId\": 1,\n  \"rating\": 5,\n  \"comment\": \"Excellent product!\"\n}"},
            "url": {"raw": "{{base_url}}/api/reviews", "host": ["{{base_url}}"], "path": ["api", "reviews"]}
          }
        }
      ]
    },
    {
      "name": "üèóÔ∏è Inventory",
      "item": [
        {
          "name": "Get All Inventory (Admin/Store Owner)",
          "request": {"method": "GET", "header": [{"key": "Authorization", "value": "Bearer {{auth_token}}"}], "url": {"raw": "{{base_url}}/api/inventory", "host": ["{{base_url}}"], "path": ["api", "inventory"]}}
        },
        {
          "name": "Add Stock to Inventory",
          "request": {"method": "PUT", "header": [{"key": "Authorization", "value": "Bearer {{auth_token}}"}], "url": {"raw": "{{base_url}}/api/inventory/1/add-stock?quantity=50", "host": ["{{base_url}}"], "path": ["api", "inventory", "1", "add-stock"], "query": [{"key": "quantity", "value": "50"}]}}
        }
      ]
    }
  ],
  "variable": [
    {"key": "base_url", "value": "http://localhost:8080", "type": "string"},
    {"key": "auth_token", "value": "", "type": "string"},
    {"key": "user_id", "value": "", "type": "string"},
    {"key": "user_role", "value": "", "type": "string"}
  ]
}
